<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @review.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @review.content %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @review.rating %>
</p>

<p>
  <strong>User:</strong>
  <%= @review.user_id %>
</p>

<p>
  <strong>Brunch:</strong>
  <%= @review.brunch_id %>
</p>

<% if @review.rating > @brunch.average_rating %>
  <p>You rated this brunch place higher than average!</p>
<% else %>
  <p>You rated this brunch place lower than average!</p>
<% end %>

<%= link_to 'Edit', edit_brunch_review_path(@review.brunch, @review) %> |
<%= link_to 'Back', brunch_reviews_path(@review.brunch) %>
