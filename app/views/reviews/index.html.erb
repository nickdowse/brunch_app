<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Rating</th>
      <th>User</th>
      <th>Brunch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.content %></td>
        <td><%= review.rating %></td>
        <td><%= review.user_id %></td>
        <td><%= review.brunch_id %></td>
        <td><%= link_to 'Show', brunch_review_path(review.brunch, review) %></td>
        <td><%= link_to 'Edit', edit_brunch_review_path(review.brunch, review) %></td>
        <td><%= link_to 'Destroy', brunch_review_path(review.brunch, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
