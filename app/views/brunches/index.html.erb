<p id="notice"><%= notice %></p>

<h1>Listing Brunches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Opening time</th>
      <th>Closing time</th>
      <th>Vegetarian options available</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brunches.each do |brunch| %>
      <tr>
        <td><%= brunch.name %></td>
        <td><%= brunch.opening_time %></td>
        <td><%= brunch.closing_time %></td>
        <td><%= brunch.vegetarian_options_available %></td>
        <td><%= brunch.address %></td>
        <td><%= link_to 'Show', brunch %></td>
        <td><%= link_to 'Edit', edit_brunch_path(brunch) %></td>
        <td><%= link_to 'Destroy', brunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

